<div class="container w-50 d-flex flex-column align-items-center mt-3">
  <h1 class="text-center"><%= @article.title %>
  <%= link_to edit_article_path(@article) do %>
    <i class="fa-solid fa-pen-nib"></i>
  <% end %>
  <%= link_to article_path(@article), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete #{@article.title}?" } do %>
    <i class="fa-solid fa-trash-can"></i>
  <% end %>
  </h1>
  <p> <%= @article.content %></p>
</div>
